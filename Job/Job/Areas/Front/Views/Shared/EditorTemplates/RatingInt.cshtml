@model int?
@{
    // 取得目前欄位的完整名稱，確保在集合或巢狀模型中也能正確綁定
    var name = ViewData.TemplateInfo.GetFullHtmlFieldName("");// ← 取得 "FRating"
    // 產生唯一前綴，避免同頁有多個評分元件時 id 衝突
    var uid = Guid.NewGuid().ToString("N");
    var current = Model ?? 0;
}


<style>
    /* 你可以把這段搬到 _LayoutBack.cshtml 的樣式區塊 */
    .star-rating {
        display: inline-flex;
        flex-direction: row-reverse;   /* 右到左，方便做 ~ 選取 */
        gap: .25rem;
    }
    .star-rating input[type="radio"] {
        display: none;
    }
    .star-rating label {
        font-size: 1.8rem;
        line-height: 1;
        cursor: pointer;
        user-select: none;
        filter: grayscale(25%);
        transition: transform .05s ease-in-out;
    }
    .star-rating label:hover {
        transform: scale(1.05);
    }
    /* hover 效果（含左邊所有星） */
    .star-rating label:hover,
    .star-rating label:hover ~ label {
        color: #f6b01e;
    }
    /* 勾選後的顏色（含左邊所有星） */
    .star-rating input[type="radio"]:checked ~ label {
        color: #f6b01e;
    }
    /* 預設未選時的顏色 */
    .star-rating label {
        color: #d0d0d0;
    }
</style>

<div class="star-rating" aria-label="評分（1 到 5 星）">
    @for (var i = 5; i >= 1; i--)
    {
        var id = $"{uid}_{i}";
        <input type="radio"
               id="@id"
               name="@name"
               value="@i"
               @(current == i ? "checked" : null) />
        <label for="@id" title="@i 分">★</label>
    }
</div>
