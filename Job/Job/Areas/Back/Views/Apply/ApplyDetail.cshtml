@model Job.ViewModel.CApplyManagementViewModel

@{
ViewData["Title"] = "ApplyDetail";
}

<div class="container">
    <h1 class="mb-4"><i class="fa-regular fa-file-lines"></i> 申請明細</h1>

    <table class="table table-bordered text-center align-middle">
        <tbody>
            <tr class="table-primary">
                <th scope="col"><i class="fa-regular fa-circle-user"></i> 姓名</th>
                <td>@Model.TworkerApply.WorkerName</td>
            </tr>
            <tr class="table-secondary">
                <th scope="col"><i class="fa-solid fa-building"></i>業主</th>
                <td>@Model.TworkerApply.ApplyOwner</td>
            </tr>
            <tr class="table-success">
                <th scope="col"><i class="fa-solid fa-briefcase"></i>職位</th>
                <td>@Model.TworkerApply.ApplyPosition</td>
            </tr>
            <tr class="table-warning">
                <th scope="col"><i class="fa-regular fa-calendar-days"></i> 申請日期</th>
                <td>@Model.TworkerApply.ApplyDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr class="table-info">
                <th scope="col"><i class="fa-solid fa-circle-check"></i>業主回覆</th>
                <td>
                    <span class="fs-6 badge @(Model.TworkerApply.ApplySituation == "已錄取" ? "bg-success" : Model.TworkerApply.ApplySituation == "未錄取" ? "bg-danger" : "bg-warning")">
                        @Model.TworkerApply.ApplySituation
                    </span>
                </td>
            </tr>
            <tr class="table-info">
                <th scope="col"><i class="fa-solid fa-circle-check"></i>換宿者回覆</th>
                <td>
                    <span class="fs-6 badge @(Model.TownerAdmission?.ReplySituation == "已錄取"
                        ? "bg-success"
                        : Model.TownerAdmission?.ReplySituation == "未錄取"
                            ? "bg-danger"
                            : "bg-warning")">
                        <span>
                            @(Model.TownerAdmission?.ReplySituation ?? "尚無回覆")
                        </span>                        
                    </span>
                </td>
            </tr>
            <tr class="table-light">
                <th scope="col"><i class="fa-solid fa-comment"></i>自我介紹</th>
                <td>@Model.TworkerApply.Introduction</td>
            </tr>
            <tr class="table-light">
                <th scope="col"><i class="fa-solid fa-hourglass-half"></i>工作日期</th>
            <td>
                @($"{Model.TownerAdmissions.FirstOrDefault()?.WorkStartDate:yyyy/MM/dd} ~ {Model.TownerAdmissions.FirstOrDefault()?.WorkEndDate:yyyy/MM/dd}")
            </td>
            </tr>
            <tr class="table-dark text-white">
                <th scope="col"><i class="fa-regular fa-camera"></i> 快照</th>
                <td>@Model.TworkerApply.SnapShotId</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        @* <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model.WorkerApplyId">
            <i class="fa-solid fa-pen-to-square"></i> 編輯
        </a>
        <a class="btn btn-danger me-2" asp-action="Delete" asp-route-id="@Model.WorkerApplyId">
            <i class="fa-solid fa-trash"></i> 刪除
        </a> *@
        <a class="btn btn-secondary" asp-action="ApplyList">
            <i class="fa-solid fa-arrow-left"></i> 返回列表
        </a>
    </div>

</div>
