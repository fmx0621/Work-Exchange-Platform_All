@model IEnumerable<Job.Models.CJobItem>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>職缺列表</title>
</head>
<body>
    <h2>職缺列表</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    序
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.jobPosting.PostTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.jobPostingStatus.StatusName)
                </th>
                <th>
                    刊登期間
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.jobPosting.ApplicationDeadline)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.jobPosting.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.jobPosting.UpdatedAt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
                foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.jobPosting.PostTitle</td>
                        <td>@item.Company.Name</td>
                        <td>@item.jobPostingStatus.StatusName</td>
                        <td>
                            @item.jobPosting.PublishStartDate?.ToString("yyyy-MM-dd")
                            ~
                            @item.jobPosting.PublishEndDate?.ToString("yyyy-MM-dd")
                        </td>
                        <td>@item.jobPosting.ApplicationDeadline?.ToString("yyyy-MM-dd")</td>
                        <td>@item.jobPosting.CreatedAt?.ToString("yyyy-MM-dd")</td>
                        <td>@item.jobPosting.UpdatedAt?.ToString("yyyy-MM-dd")</td>
                        <td>
                            @Html.ActionLink("詳細內容", "Details", new { id = item.jobPosting.PostingId })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
