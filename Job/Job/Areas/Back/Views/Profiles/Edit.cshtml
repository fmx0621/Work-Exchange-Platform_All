@model Job.Models.TMemberProfile
@{
    ViewData["Title"] = "編輯履歷";
}

<h3 class="mb-3">編輯履歷</h3>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="ProfileId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-3">
        <label asp-for="MemberId" class="form-label"></label>
        <input asp-for="MemberId" class="form-control" />
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Sex" class="form-label"></label>
        <input asp-for="Sex" class="form-control" />
        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="BirthDate" class="form-label"></label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="ProfilePicture" class="form-label"></label>
        <input asp-for="ProfilePicture" class="form-control" />
        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Education" class="form-label"></label>
        <input asp-for="Education" class="form-control" />
        <span asp-validation-for="Education" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Languages" class="form-label"></label>
        <input asp-for="Languages" class="form-control" />
        <span asp-validation-for="Languages" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="WorkExperience" class="form-label"></label>
        <textarea asp-for="WorkExperience" rows="3" class="form-control"></textarea>
        <span asp-validation-for="WorkExperience" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Licenses" class="form-label"></label>
        <input asp-for="Licenses" class="form-control" />
        <span asp-validation-for="Licenses" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="AvailableFrom" class="form-label"></label>
        <input asp-for="AvailableFrom" type="date" class="form-control" />
        <span asp-validation-for="AvailableFrom" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="AvailableTo" class="form-label"></label>
        <input asp-for="AvailableTo" type="date" class="form-control" />
        <span asp-validation-for="AvailableTo" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="PreferredCategories" class="form-label"></label>
        <input asp-for="PreferredCategories" class="form-control" />
        <span asp-validation-for="PreferredCategories" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ExpectedBenefits" class="form-label"></label>
        <input asp-for="ExpectedBenefits" class="form-control" />
        <span asp-validation-for="ExpectedBenefits" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Motivation" class="form-label"></label>
        <textarea asp-for="Motivation" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Motivation" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ContactIg" class="form-label"></label>
        <input asp-for="ContactIg" class="form-control" />
        <span asp-validation-for="ContactIg" class="text-danger"></span>
    </div>

    <!-- 時間戳僅顯示，不可編輯 -->
    <div class="col-md-3">
        <label class="form-label">建立時間</label>
        <input value="@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")" class="form-control" disabled />
    </div>
    <div class="col-md-3">
        <label class="form-label">最後更新</label>
        <input value="@Model.UpdatedAt?.ToString("yyyy/MM/dd HH:mm")" class="form-control" disabled />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">儲存</button>
        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
